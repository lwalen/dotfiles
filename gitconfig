[alias]
	st = status
	co = checkout
   cb = checkout -b
	d = diff
	dc = diff --cached

	br = branch
	bra = branch -a
	bram = branch -a --merged
	brau = branch -a --no-merged

	cm = commit -au -m 

	p = !git pull && git push
	b = !/home/lars/other/scripts/git-b
	l = !git log --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit | head -10 && echo
